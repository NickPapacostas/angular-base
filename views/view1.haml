.container
  %h2 Listing people!

  Search by Name:
  %input{:type => "text", "data-ng-model" => "filter.name"}
  %br
  %div{:enter => "loadMore()", :leave => "btn"} CONNNNNNNTENT!
  %ul
    %li{"data-ng-repeat" => "person in people | filter:filter.name | orderBy: 'city'"} {{person.name | lowercase}} - {{person.city | uppercase}}

  Person Name:
  %input{:type => "text", "data-ng-model" => "newPerson.name"}
  %br
  Person City:
  %input{:type => "text", "data-ng-model" => "newPerson.city"}
  %br
  %button{"data-ng-click" => "addPerson()"} Add Person
  %a{:href => "#/view2"}View 2



